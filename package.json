{
  "name": "com.shpala.TouchWand",
  "version": "0.1.2",
  "description": "TouchWand devices support",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "homey-zwavedriver": "^2.2.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-athom": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
